<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="logan.dl.com.myapplication.activity.ChongZhiActivity">


    <TextView android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:text="充值中心"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:textSize="36sp" />

    <EditText android:layout_marginTop="10dp"
        android:id="@+id/zhanghao"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:hint="请输入用户手机号"
        android:inputType="number|numberDecimal"
        android:gravity="left"
        android:textSize="18sp" />

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:hint="请选择金额:"
        android:inputType="number|numberDecimal"
        android:gravity="left"
        android:textSize="18sp"
        />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView
        android:gravity="center_horizontal|center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:textColor="@color/chartreuse"
        android:layout_margin="10dp"
        android:background="@color/lightslategrey"
        android:text="50" />


    <TextView
        android:gravity="center_horizontal|center_vertical"
        android:layout_width="wrap_content"  android:textColor="@color/chartreuse" android:background="@color/lightslategrey"
        android:layout_height="50dp" android:layout_weight="1" android:layout_margin="10dp"
        android:text="100" />


    <TextView
        android:gravity="center_horizontal|center_vertical"
        android:layout_width="wrap_content" android:background="@color/lightslategrey" android:layout_weight="1" android:layout_margin="10dp"  android:textColor="@color/chartreuse"
        android:layout_height="50dp"
        android:text="200" />

</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal">


        <TextView
            android:gravity="center_horizontal|center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:textColor="@color/chartreuse"
            android:layout_margin="10dp"
            android:background="@color/lightslategrey"
            android:text="500" />


        <TextView
            android:gravity="center_horizontal|center_vertical"
            android:layout_width="wrap_content"  android:textColor="@color/chartreuse" android:background="@color/lightslategrey"
            android:layout_height="50dp" android:layout_weight="1" android:layout_margin="10dp"
            android:text="1000" />



        <EditText
            android:gravity="center_horizontal|center_vertical"
            android:layout_width="wrap_content" android:background="@color/lightslategrey" android:layout_weight="1" android:layout_margin="10dp"  android:textColor="@color/chartreuse"
            android:layout_height="50dp"
            android:hint="其他"  />

    </LinearLayout>



</LinearLayout>
